<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
  </head>
  <body>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div
          class="column is-10 is-offset-1 notification is-info is-light box container"
        >
          <div class="title">
            <i class="fas fa-utensils"></i> Recipes
            <i class="fas fa-utensils"></i>
          </div>
          <% if (locals.allRecipes) { %>
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Cook Time</th>
                  <th># of Ingredients</th>
                  <th>&nbsp;</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <% let i=0; %> <% for(i=0; i < allRecipes.length; i++) { %>
              <tr>
                <td><%= allRecipes[i].name %></td>
                <td><%= allRecipes[i].description %></td>
                <td><%= allRecipes[i].description %></td>
                <td><%= allRecipes[i].description %></td>

                <td class="has-text-centered">
                  <a href="/showIngredients?id=<%= allRecipes[i].recipe_id %>">
                    <span class="icon is-small">
                      <i class="fas fa-utensils"></i> </span
                  ></a>
                </td>
                <td class="has-text-centered">
                  <a href="/deleteRecipe?id=<%= allRecipes[i].recipe_id %>">
                    <span class="icon is-small">
                      <i class="fas fa-trash-alt"></i> </span
                  ></a>
                </td>
              </tr>
              <% } %>
              <tfoot>
                <tr>
                  <td colspan="6">There are <%= i %> recipes.</td>
                </tr>
              </tfoot>
            </table>
          </div>
          <% } %>

          <form action="addRecipe" id="recipe-form" method="post">
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">Add New Recipe</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <p class="control is-expanded">
                    <input
                      name="name"
                      class="input"
                      type="text"
                      placeholder="Recipe Name"
                      required
                    />
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <textarea
                      name="description"
                      class="input"
                      type="text"
                      form="recipe-form"
                      placeholder="Description"
                      required
                    ></textarea>
                  </p>
                </div>
                <div class="field">
                  <button class="button is-link">
                    <span>Add</span>
                    <span class="icon is-small" style="padding-left: 2px">
                      <i class="fas fa-utensils"></i>
                      <i class="fas fa-plus" style="padding-left: 2px"></i>
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>
  </body>
</html>
